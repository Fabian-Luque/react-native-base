{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "noImplicitAny": false, // delete this option in the future
        "paths": {
            "@": ["src/*"],
            "tests": ["tests/*"],
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@hooks/*": ["src/hooks/*"],
            "@constants/*": ["src/constants/*"]
        }
    }
}
